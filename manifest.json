{
  "name": "Git Bookmark",
  "description": "Organize your PRs with ease",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "gitbookmark.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}